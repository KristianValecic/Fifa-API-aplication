<UserControl x:Class="WPF_Projekt.UserControls.PlayerFieldControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_Projekt.UserControls"
        xmlns:props="clr-namespace:WPF_Projekt.Properties"
             mc:Ignorable="d" 
             Loaded="UserControl_Loaded"
             MouseDown="UserControl_MouseDown"
             d:DesignHeight="100" d:DesignWidth="100">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Image
            x:Name="imgPlr"
            Grid.RowSpan="2"
            VerticalAlignment="Top"
            Source="\Resources\shirt.png"
            ></Image>


        <Label
                x:Name="lblPlrName"
                Grid.Row="2"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Center"
                ></Label>

        <Label
            x:Name="lblPlrShrtNmbr"
            VerticalAlignment="Bottom"
            HorizontalAlignment="Center"
            ></Label>


    </Grid>
</UserControl>
