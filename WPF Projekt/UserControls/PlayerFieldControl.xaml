<UserControl x:Class="WPF_Projekt.UserControls.PlayerFieldControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_Projekt.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="120">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Image
            Grid.RowSpan="2"
            Height="50"
            VerticalAlignment="Top"
            Source="\Resources\shirt.png"
            ></Image>


        <Label
            x:Name="lblPlrName"
            VerticalAlignment="Bottom"
            HorizontalAlignment="Center"
            Grid.Row="2"
            ></Label>

        <Label
            x:Name="lblPlrShrtNmbr"
            VerticalAlignment="Bottom"
            HorizontalAlignment="Center"
            ></Label>


    </Grid>
</UserControl>
